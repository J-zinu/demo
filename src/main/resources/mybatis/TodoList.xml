<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.TodoListMapper">
    <select id="getTodoList" parameterType="com.example.demo.dto.TodoListDTO" resultType="com.example.demo.dto.TodoListDTO">
        SELECT * FROM TodoList
    </select>
    <insert id="insertTodoList" parameterType="com.example.demo.dto.TodoListDTO">
        INSERT INTO TodoList (todo, regist_day, user_id) VALUES (#{todo}, NOW(), 'root');
    </insert>
    <delete id="deleteTodoList" parameterType="com.example.demo.dto.TodoListDTO">
        DELETE FROM TodoList WHERE todo_num=#{todo_num}
    </delete>
</mapper>
